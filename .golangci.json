{
	"linters": {
		"disable-all": true,
		"enable": [
			"goimports",
			"gofmt",
			"misspell",
			"revive",
			"gosec",
			"prealloc"
		]
	},
	"run": {
		"skip-files": [
			"/zz_generated_",
			"_generated"
		],
		"skip-dirs": [
			"generated"
		],
		"deadline": "5m",
		"tests": true,
		"build-tags": [
			"test"
		]
	},
	"linters-settings": {
		"goimports": {
			"local-prefixes": "github.com/harvester/harvester"
		},
		"gosec": {
			"excludes": [
				"G101",
				"G108",
				"G401",
				"G402",
				"G505"
			],
			"config": {
				"G306": "0644"
			}
		}
	}
}
