{
	"linters": {
		"disable-all": true,
		"enable": [
			"govet",
			"goimports",
			"misspell",
			"ineffassign",
			"gofmt",
			"staticcheck",
			"bodyclose",
			"gosimple",
			"prealloc",
			"deadcode",
			"errcheck"
		]
	},
	"run": {
		"skip-files": [
			"/zz_generated_",
                        "_generated"
		],
		"skip-dirs": [
			"generated"
		],
		"deadline": "5m",
		"tests": true,
		"build-tags": [
			"test"
		]
	},
        "linters-settings": {
                "goimports": {
                        "local-prefixes": "github.com/harvester/harvester"
                }
        }
}
